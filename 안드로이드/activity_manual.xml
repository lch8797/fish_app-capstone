<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backc1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textAlignment="center"
        android:textSize="60dp"
        android:textColor="#5D5D5D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
    </LinearLayout>


    <Button
        android:id="@+id/btnManual1"
        android:layout_width="266dp"
        android:layout_height="70dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="224dp"
        android:onClick="mOnPopupClick"
        android:text="판별가능한 물고기"
        android:textSize="30dp"
        android:backgroundTint="#3D6070"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnManual2"
        android:layout_width="266dp"
        android:layout_height="70dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="304dp"
        android:onClick="mOnPopupClick2"
        android:text="사진찍는 방법"
        android:textSize="30dp"
        android:backgroundTint="#3D6070"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnManual4"
        android:layout_width="266dp"
        android:layout_height="70dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="388dp"
        android:onClick="mOnPopupClick4"
        android:text="텍스트 검색 방법"
        android:textSize="30dp"
        android:backgroundTint="#3D6070"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnManual5"
        android:layout_width="266dp"
        android:layout_height="70dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="476dp"
        android:onClick="mOnPopupClick5"
        android:text="음성 검색 방법"
        android:textSize="30dp"
        android:backgroundTint="#3D6070"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="612dp"
        android:text="처음으로"
        android:textSize="20dp"
        android:backgroundTint="#3D6070"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>